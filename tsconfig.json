{
   "compilerOptions": {
      "target": "ES2020",
      "jsx": "react-jsx",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "declaration": true,
      "outDir": "dist/",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": true,
      "skipLibCheck": true
   },
   "include": ["src"]
}
